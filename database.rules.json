{
    "rules": {
        ".read": false,
        ".write": false,
        "auth_status": {
            "$uid": {
                ".read": "auth != null && auth.uid == $uid"
            }
        },
        "settings": {
            "$uid": {
                ".read": "auth != null && auth.uid == $uid",
                ".write": "auth != null && auth.uid == $uid",
                "calendar_id": {
                    ".read": "auth != null && auth.uid == $uid",
                    ".validate": "newData.isString()"
                },
                "courses": {
                    "$course_id": {
                        ".validate": "data.exists()",
                        "name": {
                            ".validate": "newData.isString()"
                        },
                        "color": {
                            ".validate": "newData.isString()"
                        },
                        "href": {
                            ".validate": "newData.isString() && newData.val().matches(/^[\\/a-zA-Z0-9]+$/)"
                        },
                        "$other": {
                            ".validate": false
                        }
                    }
                },
                "completed_assignment_color": {
                    ".validate": "newData.isString()"
                },
                "$other": {
                    ".validate": false
                }
            }
        }
    }
}
